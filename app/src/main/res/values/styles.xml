<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:background">@drawable/frame</item>
        <item name="android:fontFamily">@font/apercu_pro_regular</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">#BCBCBC</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/apercu_pro_regular</item>
        <item name="android:fontFamily">@font/apercu_pro_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_grey_without_border">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/apercu_pro_regular</item>
        <item name="android:textColor">#BCBCBC</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="circleImageView" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>